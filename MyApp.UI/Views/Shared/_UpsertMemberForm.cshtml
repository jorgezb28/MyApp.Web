<div>
    <form class="row col-md-12 g-4">
        <div class="col-md-6">
            <div class="form-group">
                <label for="member-name" class="form-label">Name</label>
                <input type="text" class="form-control col-md-12" id="member-name" required placeholder="Full Name">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="member-phone" class="form-label">Phone Number</label>
                <input type="tel" class="form-control col-md-12" id="member-phone" pattern="[0-9]{3}-[0-9]{4}"
                       required placeholder="000-0000" data-validation-error-msg="Invalid phone number.">
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <label for="member-email" class="form-label">Email</label>
                <input type="email" class="form-control col-md-12" id="member-email"
                       required placeholder="new@member.com" data-validation-error-msg="Invalid phone number.">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="member-join-date" class="form-label">Join Date</label>
                <input type="date" class="form-control" id="member-join-date">
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="form-group text-left">
                <label for="membership-plan" class="form-label col-md-6 px-0">Membership Plan</label>
                <select class="custom-select form-control" id="membership-plan" required data-validation-error-msg="Select a plan.">

                    @*Foreach*@
                    <option value="id">Modelo</option>

                </select>
            </div>
        </div>
        <div class="d-flex justify-content-end col-md-12">
            <button class="btn btn-danger" id="go-back-btn">Cancel</button>
            <button type="submit" class="btn btn-success ml-2">Save changes</button>
        </div>
    </form>
</div>

<script>
    document.getElementById("go-back-btn").addEventListener("click", function () {
        window.history.back();
    });
</script>