@{
    ViewData["Title"] = "Members";
}

<div class="container mt-4">
    <div class="row">
        <div class="d-flex align-items-center col-md-12">
            <div class="col-md-9">
                <h1>Members</h1>
            </div>
            <div class="col-md-3">
                <a class="btn btn-lg btn-success" id="add-member-btn" href="@Url.Action("AddMember", "Members")">Add Member</a>
            </div>
        </div>
        <hr class="my-3" />
    </div>

    <table class="table table-bordered" id="MembersTable">
        <thead class="table-dark">
            <tr>
                <th scope="col" class="text-center">No.</th>
                <th scope="col" class="text-center">Name</th>
                <th scope="col" class="text-center">Membership Plan</th>
                <th scope="col" class="text-center">Options</th>
            </tr>
        </thead>
        <tbody>
            @*Foreach Model*@
            <tr>
                <td class="text-center">1</td>
                <td class="text-center">Model.Name</td>
                <td class="text-center">Model.MembershipPlan</td>
                <td class="text-center">
                    <a class="btn btn btn-info" id="view-details-btn" href="@Url.Action("ViewDetails", "Members")">Details</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>